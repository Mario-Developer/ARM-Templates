{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "actionGroupName": {
            "type": "string",
            "metadata": {
                "description": "Nombre único (dentro del grupo de recursos) para el grupo de acción"
            }
        },
        "actionGroupShortName": {
            "type": "string",
            "metadata": {
                "description": "Nombre corto (máximo 12 caracteres) para el grupo Acción"
            }
        },
        "phoneNumber": {
            "type": "string",
            "metadata": {
                "description": "Numero telefónico al cual se enviará la alerta"
            }
        },
        "emailAddress": {
            "type": "string",
            "metadata": {
                "description": "Dirección de correo eectónico a la cual se eviará la alerta"
            }
        }
    },
    "resources": [
        {
        "type": "Microsoft.Insights/actionGroups",
        "apiVersion": "2018-03-01",
        "name": "[parameters('actionGroupName')]",
        "location": "Global",
        "properties": {
            "groupShortName": "[parameters('actionGroupShortName')]",
            "enabled": true,
            "smsReceivers": [
                {
                "name": "contosoSMS",
                "countryCode": "52",
                "phoneNumber": "[parameters('phoneNumber')]"
                }
            ],
            "emailReceivers": [
                {
                "name": "contosoEmail",
                "emailAddress": "[parameters('emailAddress')]"
                }
            ]
        }
        } 
    ],
    "outputs":{
        "actionGroupId":{
            "type":"string",
            "value":"[resourceId('Microsoft.Insights/actionGroups',parameters('actionGroupName'))]"
        }
    }
  }