{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vm": {
            "type": "array",
            "defaultValue": [
                "JSON-VM2",
                "JSON-VML"
            ],
            "metadata": {
                "description": "description"
            }
        },
        "actionGroupName": {
            "type": "string",
            "defaultValue": "Notificaciones",
            "metadata": {
                "description": "description"
            }
        },
        "actionGroupShortName": {
            "type": "string",
            "defaultValue": "Notif",
            "metadata": {
                "description": "description"
            }
        },
        "phoneNumber": {
            "type": "string",
            "defaultValue": "2221918832",
            "metadata": {
                "description": "description"
            }
        },
        "emailAddress": {
            "type": "string",
            "defaultValue": "mgomez@precitool.com",
            "metadata": {
                "description": "description"
            }
        },
        "cpualertName": {
            "type": "string",
            "defaultValue": "CPU",
            "metadata": {
                "description": "description"
            }
        }
    },
    "resources":[ 
        {
            "type": "Microsoft.Insights/actionGroups",
            "apiVersion": "2018-03-01",
            "name": "[parameters('actionGroupName')]",
            "location": "Global",
            "properties": {
                "groupShortName": "[parameters('actionGroupShortName')]",
                "enabled": true,
                "smsReceivers": [
                    {
                    "name": "SMS",
                    "countryCode": "52",
                    "phoneNumber": "[parameters('phoneNumber')]"
                    }
                ],
                "emailReceivers": [
                    {
                    "name": "Email",
                    "emailAddress": "[parameters('emailAddress')]"
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-03-01",
            "type": "Microsoft.Insights/metricAlerts",
            "name": "[parameters('cpualertName')]",
            "location": "global",
            "tags": {},
            "properties": {
                "description": "Alerta CPU",
                "severity": 4,
                "enabled": true,
                "copy":[
                    {
                        "name":"scopes",
                        "count": "[length(parameters('vm'))]",
                        "input": "[resourceId('Microsoft.Compute/virtualMachines', parameters('vm')[copyIndex('scopes')])]"
                    }
                ],
                "targetResourceRegion": "[resourceGroup().location]",
                "targetResourceType": "Microsoft.Compute/virtualMachines",
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "odata.type": "Microsoft.Azure.Monitor.MultipleResourceMultipleMetricCriteria",
                    "allOf": [
                        {
                            "criterionType": "StaticThresholdCriterion",
                            "name" : "1st criterion",
                            "metricName": "Percentage CPU",
                            "dimensions":[],
                            "operator": "GreaterThan",
                            "threshold" : 2,
                            "timeAggregation": "Average"                        
                        }
                    ]
                },
                "actions": [
                    {
                        "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Insights/actionGroups/', parameters('actionGroupName'))]"
            ]
        }
    ],
    "outputs":{
        
    }
}