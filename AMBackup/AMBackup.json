
{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VirtualMachines": {
            "type": "array",
            "defaultValue": ["JSON-VM2","JSON-VML"],
            "metadata": {
                "description": "Arreglo de Máquinas Virtuales Azure. e.g. [\"vm1\",\"vm2\",\"vm3\"]"
            }
        },
        "phoneNumber": {
            "type": "string",
            "defaultValue": "2221918832",
            "metadata": {
                "description": "Numero telefónico al cual se enviará la alerta"
            }
        },
        "emailAddress": {
            "type": "string",
            "defaultValue": "mgomez@precitool.com",
            "metadata": {
                "description": "Dirección de correo eectónico a la cual se eviará la alerta"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "storageaccountName": "[concat(uniqueString(resourceGroup().id), 'storage')]",
        "workspaceName": "[concat(uniqueString(resourceGroup().id), 'workspace')]",
        "vaultName": "[concat(uniqueString(resourceGroup().id), 'vault')]",
        "policyName": "Precitool-Policy",
        "timeZone": "Central Standard Time (Mexico)",
        "scheduleRunTimes":["01:00"],
        "daysOfTheWeek":["Sunday"],
        "instantRpRetentionRangeInDays": 2,
        "dailyRetentionDurationCount": 16,
        "weeklyRetentionDurationCount": 6,
        "monthlyRetentionDurationCount": 4,
        "actiongroupName": "Notificaciones",
        "actiongroupShortName":"Notify",
        "backupalertName": "Implementación de Backup correcta",
        "cpualertName": "Procentaje de CPU mayor a 60",

        "backupFabric": "Azure",
        "v2VmContainer": "iaasvmcontainer;iaasvmcontainerv2;",
        "v2Vm": "vm;iaasvmcontainerv2;"
    },
    "resources": [
        {   
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageaccountName')]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "name": "[variables('workspaceName')]",
            "apiVersion": "2015-11-01-preview",
            "location": "WestUS2",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                },
                "retentionInDays": 60,
                "features": {
                    "searchVersion": 1,
                    "legacy": 0,
                    "enableLogAccessUsingOnlyResourcePermissions": true
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageaccountName'))]"
            ]
        },
        {
            "type": "Microsoft.RecoveryServices/vaults",
            "name": "[variables('vaultName')]",
            "apiVersion": "2016-06-01",
            "location": "[variables('location')]",
            "sku": {
                "name": "RS0",
                "tier": "Standard"
            },
            "properties": {},
            "dependsOn": [
                "[resourceId('microsoft.operationalinsights/workspaces/', variables('workspaceName'))]"
            ]
        },
        {
            "type": "Microsoft.RecoveryServices/vaults/backupPolicies",
            "name": "[concat(variables('vaultName'), '/', variables('policyName'))]",
            "apiVersion": "2016-06-01",
            "location": "[variables('location')]",
            "properties": {
                "backupManagementType": "AzureIaasVM",
                "instantRpRetentionRangeInDays": "[variables('instantRpRetentionRangeInDays')]",
                "schedulePolicy": {
                    "scheduleRunFrequency": "Daily",
                    "scheduleRunDays": null,
                    "scheduleRunTimes": "[variables('scheduleRunTimes')]",
                    "schedulePolicyType": "SimpleSchedulePolicy"
                },
                "retentionPolicy": {
                    "dailySchedule": {
                        "retentionTimes": "[variables('scheduleRunTimes')]",
                        "retentionDuration": {
                            "count": "[variables('dailyRetentionDurationCount')]",
                            "durationType": "Days"
                        }
                    },
                    "weeklySchedule": {
                        "daysOfTheWeek": "[variables('daysOfTheWeek')]",
                        "retentionTimes": "[variables('scheduleRunTimes')]",
                        "retentionDuration": {
                            "count": "[variables('weeklyRetentionDurationCount')]",
                            "durationType": "Weeks"
                        }
                    },
                    "monthlySchedule": {
                        "retentionScheduleFormatType": "Daily",
                        "retentionScheduleDaily": {
                            "daysOfTheMonth": [
                                {
                                "date": 1,
                                "isLast": false
                                }
                            ]
                        },
                        "retentionScheduleWeekly": null,
                        "retentionTimes": "[variables('scheduleRunTimes')]",
                        "retentionDuration": {
                            "count": "[variables('monthlyRetentionDurationCount')]",
                            "durationType": "Months"
                        }
                    },
                    "retentionPolicyType": "LongTermRetentionPolicy"
                },
                "timeZone": "[variables('timeZone')]"
            },
            "dependsOn": [
                "[concat('Microsoft.RecoveryServices/vaults/', variables('vaultName'))]"
            ]            
        },
        {
            "type": "Microsoft.RecoveryServices/vaults/providers/diagnosticSettings",
            "name": "[concat(variables('vaultName'), '/microsoft.insights/', variables('workspaceName'))]",
            "apiVersion": "2017-05-01-preview",
            "properties": {
                "name": "[variables('workspaceName')]",
                "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts/', variables('storageaccountName'))]",
                "workspaceId": "[resourceId('microsoft.operationalinsights/workspaces/', variables('workspaceName'))]",
                "logs": [
                    {
                        "category": "CoreAzureBackup",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 60,
                            "enabled": true
                        }
                    },
                    {
                        "category": "AddonAzureBackupJobs",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 60,
                            "enabled": true
                        }
                    },
                    {
                        "category": "AddonAzureBackupAlerts",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 60,
                            "enabled": true
                        }
                    },
                    {
                        "category": "AddonAzureBackupPolicy",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 60,
                            "enabled": true
                        }
                    },
                    {
                        "category": "AddonAzureBackupStorage",
                        "enabled": true,
                        "retentionPolicy": {
                            "days": 60,
                            "enabled": true
                        }
                    }
                ],
                "metrics": []
            },
            "dependsOn": [
                "[resourceId('Microsoft.RecoveryServices/vaults/', variables('vaultName'))]"
            ]
        },
        {
            "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
            "name": "[concat(variables('vaultName'), '/', variables('backupFabric'), '/', variables('v2VmContainer'), concat(resourceGroup().name, ';', parameters('VirtualMachines')[copyIndex()]), '/', variables('v2Vm'), concat(resourceGroup().name, ';', parameters('VirtualMachines')[copyIndex()]))]",
            "apiVersion": "2016-12-01",
            "comments": "PrecitoolVault/Azure/iaasvmcontainer;iaasvmcontainerv2;JSON-TEMPLATES;JSON-VM/vm;iaasvmcontainerv2;JSON-TEMPLATES;JSON-VM",
            "location": "[variables('location')]",
            "copy": {
                "name": "v2VmsCopy",
                "count": "[length(parameters('VirtualMachines'))]"
            },
            "properties":{
                "protectedItemType": "Microsoft.Compute/virtualMachines",
                "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', variables('vaultName'), variables('policyName'))]",
                "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('VirtualMachines')[copyIndex()])]"
            },
            "dependsOn":[
                "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', variables('vaultName'), variables('policyName'))]"
            ]
        },
        {
            "type": "Microsoft.Insights/actionGroups",
            "name": "[variables('actiongroupName')]",
            "apiVersion": "2018-03-01",
            "location": "Global",
            "properties": {
                "groupShortName": "[variables('actiongroupShortName')]",
                "enabled": true,
                "smsReceivers": [
                    {
                    "name": "SMS",
                    "countryCode": "52",
                    "phoneNumber": "[parameters('phoneNumber')]"
                    }
                ],
                "emailReceivers": [
                    {
                    "name": "Email",
                    "emailAddress": "[parameters('emailAddress')]"
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', variables('vaultName'), variables('policyName'))]"
            ]
        },
        {
            "type": "Microsoft.Insights/metricAlerts",
            "name": "[variables('cpualertName')]",
            "apiVersion": "2018-03-01",
            "location": "global",
            "tags": {},
            "properties": {
                "description": "Alerta CPU mayor a 60",
                "severity": 4,
                "enabled": true,
                "copy":[
                    {
                        "name":"scopes",
                        "count": "[length(parameters('VirtualMachines'))]",
                        "input": "[resourceId('Microsoft.Compute/virtualMachines', parameters('VirtualMachines')[copyIndex('scopes')])]"
                    }
                ],
                "targetResourceRegion": "[resourceGroup().location]",
                "targetResourceType": "Microsoft.Compute/virtualMachines",
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "odata.type": "Microsoft.Azure.Monitor.MultipleResourceMultipleMetricCriteria",
                    "allOf": [
                        {
                            "criterionType": "StaticThresholdCriterion",
                            "name" : "1st criterion",
                            "metricName": "Percentage CPU",
                            "dimensions":[],
                            "operator": "GreaterThan",
                            "threshold" : 2,
                            "timeAggregation": "Average"                        
                        }
                    ]
                },
                "actions": [
                    {
                        "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', variables('actiongroupName'))]"
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Insights/actionGroups/', variables('actiongroupName'))]"
            ]
        },
        {
            "type":"Microsoft.Insights/scheduledQueryRules",
            "name": "[variables('backupalertName')]",
            "apiVersion": "2018-04-16",
            "location": "WestUS2",
            "properties":{
                "description": "Sample log query alert",
                "enabled": "true",
                "source": {
                    "query": "AddonAzureBackupJobs | summarize arg_max(TimeGenerated,*) by JobUniqueId | where JobStatus == \"Completed\"",
                    "dataSourceId": "[resourceId('microsoft.operationalinsights/workspaces/', variables('workspaceName'))]",
                    "queryType":"ResultCount"
                },
                "schedule":{
                    "frequencyInMinutes": 15,
                    "timeWindowInMinutes": 60
                },
                "action":{
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "4",
                    "aznsAction":{
                        "actionGroup": "[array(resourceId('Microsoft.Insights/actionGroups', variables('actiongroupName')))]"
                    },
                    "trigger":{
                        "thresholdOperator": "GreaterThan",
                        "threshold": 1
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Insights/actionGroups/', variables('actiongroupName'))]"
            ]
        }
    ]
  }