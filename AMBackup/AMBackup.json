
{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Ubicación para todos los recursos"
            }
        },
        "VirtualMachines": {
            "type": "array",
            "defaultValue": ["JSON-VM2","JSON-VML"],
            "metadata": {
                "description": "Arreglo de Máquinas Virtuales Azure. e.g. [\"vm1\",\"vm2\",\"vm3\"]"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "ambstorageaccount1",
            "metadata": {
                "description": "Nombre de una cuenta de almacenamiento"
            }
        },
        "LAWorkspaceName": {
            "type": "string",
            "defaultValue": "AMBWorkSpace1",
            "metadata": {
                "description": "Nombre de un espacio de trabajo Log Analytics"
            }
        },
        "vaultName": {
            "type": "string",
            "defaultValue": "PrecitoolVault",
            "metadata": {
                "description": "Nombre de la bóveda de servicios de recuperación"
            }
        },
        "policyName": {
            "type": "string",
            "defaultValue": "DirectivaPrecitool",
            "metadata": {
                "description": "Nombre de la política de respaldo"
            }
        },
        "scheduleRunTimes": {
            "type": "array",
            "defaultValue": ["01:00"],
            "metadata": {
                "description": "Momentos del día en que se debe activar la copia de seguridad p.ej. 01:00 o 13:00. Debe ser una matriz, sin embargo, para las máquinas virtuales IaaS, solo un valor es válido. Esto también se usará en LTR para copias de seguridad diarias, semanales, mensuales y anuales "
            }
        },
        "timeZone": {
            "type": "string",
            "defaultValue": "Central Standard Time (Mexico)",
            "metadata": {
                "description": "Cualquier zona horaria válida, por ejemplo: UTC, hora estándar del Pacífico. Consulte: https://msdn.microsoft.com/en-us/library/gg154758.aspx "
            }
        },
        "instantRpRetentionRangeInDays": {
            "type": "int",
            "defaultValue": 2,
            "allowedValues": [
                1,
                2,
                3,
                4,
                5
                ],
            "metadata": {
                "description": "Número de días que se debe conservar el Punto de recuperación instantánea"
            }
        },
        "dailyRetentionDurationCount": {
            "type": "int",
            "defaultValue": 180,
            "metadata": {
                "description": "Número de días que desea conservar la copia de seguridad."
            }
        },
        "daysOfTheWeek": {
            "type": "array",
            "defaultValue": ["Sunday"],
            "metadata": {
                "description": "La copia de seguridad se ejecutará en una variedad de días como lunes, martes, etc. Se aplica solo en retención semanal "
            }
        },
        "weeklyRetentionDurationCount": {
            "type": "int",
            "defaultValue": 6,
            "metadata": {
                "description": "Número de semanas que desea conservar la copia de seguridad "
            }
        },
        "monthlyRetentionDurationCount": {
            "type": "int",
            "defaultValue": 4,
            "metadata": {
                "description": "Número de meses que desea conservar la copia de seguridad "
            }
        },
        "actionGroupName": {
            "type": "string",
            "defaultValue": "Notificaciones",
            "metadata": {
                "description": "Nombre único (dentro del grupo de recursos) para el grupo de accion"
            }
        },
        "actionGroupShortName": {
            "type": "string",
            "defaultValue": "Notif",
            "metadata": {
                "description": "Nombre corto (máximo 12 caracteres) para el grupo Acción"
            }
        },
        "phoneNumber": {
            "type": "string",
            "defaultValue": "2221918832",
            "metadata": {
                "description": "Numero telefónico al cual se enviará la alerta"
            }
        },
        "emailAddress": {
            "type": "string",
            "defaultValue": "mgomez@precitool.com",
            "metadata": {
                "description": "Dirección de correo eectónico a la cual se eviará la alerta"
            }
        },
        "backupalertName": {
            "type": "string",
            "defaultValue": "Implementación de Backup correcta",
            "metadata": {
                "description": "description"
            }
        }
    },
    "variables": {
        "backupFabric": "Azure",
        "v2VmContainer": "iaasvmcontainer;iaasvmcontainerv2;",
        "v2Vm": "vm;iaasvmcontainerv2;"
    },
    "resources": [
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "apiVersion": "2015-11-01-preview",
            "type": "Microsoft.OperationalInsights/workspaces",
            "name": "[parameters('LAWorkspaceName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "Free"
                }
            }
        },
        {
            "apiVersion": "2016-06-01",
            "type": "Microsoft.RecoveryServices/vaults",
            "name": "[parameters('vaultName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "RS0",
                "tier": "Standard"
            },
            "properties": {}
        },
        {
            "apiVersion": "2016-06-01",
            "type": "Microsoft.RecoveryServices/vaults/backupPolicies",
            "name": "[concat(parameters('vaultName'), '/', parameters('policyName'))]",
            "dependsOn": [
                "[concat('Microsoft.RecoveryServices/vaults/', parameters('vaultName'))]"
            ],
            "location": "[parameters('location')]",
            "properties": {
                "backupManagementType": "AzureIaasVM",
                "instantRpRetentionRangeInDays": "[parameters('instantRpRetentionRangeInDays')]",
                "schedulePolicy": {
                    "scheduleRunFrequency": "Daily",
                    "scheduleRunDays": null,
                    "scheduleRunTimes": "[parameters('scheduleRunTimes')]",
                    "schedulePolicyType": "SimpleSchedulePolicy"
                },
                "retentionPolicy": {
                    "dailySchedule": {
                        "retentionTimes": "[parameters('scheduleRunTimes')]",
                        "retentionDuration": {
                            "count": "[parameters('dailyRetentionDurationCount')]",
                            "durationType": "Days"
                        }
                    },
                    "weeklySchedule": {
                        "daysOfTheWeek": "[parameters('daysOfTheWeek')]",
                        "retentionTimes": "[parameters('scheduleRunTimes')]",
                        "retentionDuration": {
                            "count": "[parameters('weeklyRetentionDurationCount')]",
                            "durationType": "Weeks"
                        }
                    },
                    "monthlySchedule": {
                        "retentionScheduleFormatType": "Daily",
                        "retentionScheduleDaily": {
                            "daysOfTheMonth": [
                                {
                                "date": 1,
                                "isLast": false
                                }
                            ]
                        },
                        "retentionScheduleWeekly": null,
                        "retentionTimes": "[parameters('scheduleRunTimes')]",
                        "retentionDuration": {
                            "count": "[parameters('monthlyRetentionDurationCount')]",
                            "durationType": "Months"
                        }
                    },
                    "retentionPolicyType": "LongTermRetentionPolicy"
                },
                "timeZone": "[parameters('timeZone')]"
            }
        },
        {
            "apiVersion": "2017-05-01-preview",
            "type": "Microsoft.RecoveryServices/vaults/providers/diagnosticSettings",
            "name": "[concat(parameters('vaultName'), '/microsoft.insights/', parameters('LAWorkspaceName'))]",
            "properties": {
            "name": "[parameters('LAWorkspaceName')]",
            "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
            "workspaceId": "[resourceId('microsoft.operationalinsights/workspaces/', parameters('LAWorkspaceName'))]",
            "logs": [
                {
                    "category": "AddonAzureBackupJobs",
                    "enabled": true
                }
                
            ],
            "metrics": []
            },
            "dependsOn": [
                "[resourceId('Microsoft.RecoveryServices/vaults/', parameters('vaultName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
                "[resourceId('microsoft.operationalinsights/workspaces/', parameters('LAWorkspaceName'))]"
            ]
        },
        {
            "apiVersion": "2016-12-01",
            "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
            "name": "[concat(parameters('vaultName'), '/', variables('backupFabric'), '/', variables('v2VmContainer'), concat(resourceGroup().name, ';', parameters('VirtualMachines')[copyIndex()]), '/', variables('v2Vm'), concat(resourceGroup().name, ';', parameters('VirtualMachines')[copyIndex()]))]",
            "comments": "PrecitoolVault/Azure/iaasvmcontainer;iaasvmcontainerv2;JSON-TEMPLATES;JSON-VM/vm;iaasvmcontainerv2;JSON-TEMPLATES;JSON-VM",
            "location": "[parameters('location')]",
            "copy": {
                "name": "v2VmsCopy",
                "count": "[length(parameters('VirtualMachines'))]"
            },
            "properties":{
                "protectedItemType": "Microsoft.Compute/virtualMachines",
                "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', parameters('vaultName'), parameters('policyName'))]",
                "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('VirtualMachines')[copyIndex()])]"
            },
            "dependsOn":[
                "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies', parameters('vaultName'), parameters('policyName'))]"
            ]
        }
    ]
  }